<div class="container py-5">
  <!-- <h2 class="mb-4">ডোনার তালিকা</h2> -->

  <!-- Search & Filter -->
  <form method="GET" action="/admin/donors" class="row g-2 mb-3">
    <!-- Search box -->
    <div class="col-md-4">
      <input 
        type="text" 
        name="search" 
        class="form-control" 
        placeholder="নাম বা ফোন দিয়ে খুঁজুন" 
        value="<%= typeof search !== 'undefined' ? search : '' %>"
      />
    </div>

    <!-- Blood group filter -->
    <div class="col-md-3">
      <select name="bloodGroup" class="form-select">
        <option value="">সব রক্তের গ্রুপ</option>
        <option value="A+" <%= bloodGroup === 'A+' ? 'selected' : '' %>>A+</option>
        <option value="A-" <%= bloodGroup === 'A-' ? 'selected' : '' %>>A-</option>
        <option value="B+" <%= bloodGroup === 'B+' ? 'selected' : '' %>>B+</option>
        <option value="B-" <%= bloodGroup === 'B-' ? 'selected' : '' %>>B-</option>
        <option value="O+" <%= bloodGroup === 'O+' ? 'selected' : '' %>>O+</option>
        <option value="O-" <%= bloodGroup === 'O-' ? 'selected' : '' %>>O-</option>
        <option value="AB+" <%= bloodGroup === 'AB+' ? 'selected' : '' %>>AB+</option>
        <option value="AB-" <%= bloodGroup === 'AB-' ? 'selected' : '' %>>AB-</option>
      </select>
    </div>

    <!-- Filter + Add Donor -->
    <div class="col-md-5 d-flex">
      <button type="submit" class="btn btn-primary me-2">অনুসন্ধান করুন</button>
      <a href="/admin/donors" class="btn btn-secondary">ফিল্টার রিসেট</a>
    </div>
    
  </form>

  <div class="d-flex justify-content-end mb-3">
    <a href="/admin/donors/create" class="btn btn-success">নতুন ডোনার</a>
  </div>

  <!-- Table -->
  <table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
      <tr>
        <th>সিরিয়াল</th>
        <th>নাম</th>
        <th>রক্তের গ্রুপ</th>
        <th>ফোন</th>
        <!-- <th>ঠিকানা</th> -->
        <!-- <th>পূর্বে রক্ত দিয়েছেন</th> -->
        <th>সর্বশেষ রক্ত দিয়েছেন</th>
        <th>অ্যাকশন</th>
      </tr>
    </thead>
    <tbody>
      <% if (donors && donors.length > 0) { %>
        <% donors.forEach((donor, index)=> { %>
          <tr>
            <td><%= (currentPage - 1) * limit + index + 1 %></td>
            <td><%= donor.name %></td>
            <td><%= donor.bloodGroup ?? 'N/A' %></td>
            <td><%= donor.phone %></td>
            <!-- <td><%= donor.address %></td> -->
            <!-- <td><%= donor.is_donated_before ? 'হ্যাঁ' : 'না' %></td> -->
            <td><%= donor.lastDonation ? new Date(donor.lastDonation).toLocaleDateString('bn-BD') : 'N/A' %></td>
            <td>
              <a href="/admin/donors/<%= donor.id %>" class="btn btn-info btn-sm">দেখুন</a>
              <a href="/admin/donors/edit/<%= donor.id %>" class="btn btn-sm btn-secondary">সম্পাদনা</a>
              <form
                action="/admin/donors/delete/<%= donor.id %>"
                method="POST"
                class="d-inline"
                onsubmit="return confirm('আপনি কি সত্যিই ডোনার মুছতে চান?');"
              >
                <button type="submit" class="btn btn-sm btn-danger">মুছুন</button>
              </form>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr>
          <td colspan="8" class="text-center">কোন ডোনার পাওয়া যায়নি।</td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <!-- Pagination -->
  <% if (totalPages > 1) { %>
    <nav>
      <ul class="pagination justify-content-center">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %>&search=<%= search || '' %>&bloodGroup=<%= bloodGroup || '' %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } %>
</div>
